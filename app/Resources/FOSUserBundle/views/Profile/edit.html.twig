{% extends "::layout.html.twig" %}

{% block Wcsplatform_body %}
    {% block fos_user_content %}
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_profile_edit'), 'attr': {'class': 'fos_user_registration_register', 'novalidate': 'novalidate', 'autocomplete': 'off'}}) }}
        <div class="row">
            <div class="col-xs-3">
                <img class="img-responsive img-circle" src="{{ asset('img/profil/' ~ form.vars.value.imgProfil) }}" alt="Profil">
            </div>
        </div>
        {{ form_row(form.imgProfil) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.prenom) }}
        {{ form_row(form.email) }}
        {{ form_row(form.urlLinkedin) }}
        {{ form_row(form.urlTweeter) }}
        {{ form_row(form.urlGithub) }}
        {{ form_row(form.categories) }}
        {{ form_row(form.profil) }}
        <div id="villeEcole">
            {{ form_row(form.villeEcole) }}
        </div>
        <div id="emploi">
            {{ form_row(form.emploi) }}
            {{ form_row(form.entreprise) }}
        </div>
        <div class="form-group text-right">
            <a class="btn btn-danger" href="{{ path('wcs_platform_homepage') }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Annuler</a>
            <a class="btn btn-primary" href="{{ path('fos_user_change_password') }}"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Changer mot de passe</a>
            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Modifier</button>
        </div>
        {{ form_end(form) }}
    {% endblock %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/profile.js') }}"></script>
    <script src="{{ asset('js/categoriesInQuestions.js') }}"></script>
    <script src="{{ asset('js/bootstrap-multiselect.js') }}"></script>

{% endblock %}