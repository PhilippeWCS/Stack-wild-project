{% extends 'base.html.twig' %}

{% block body %}
    <h1>Question</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Intitulequestion</th>
                <td>{{ question.intituleQuestion }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ question.contenu }}</td>
            </tr>
            <tr>
                <th>Lienimage</th>
                <td>{{ question.lienImage }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ question.statut }}</td>
            </tr>
            <tr>
                <th>Idusers</th>
                <td>{{ question.idUsers }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('questions_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('questions_edit', { 'id': question.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
