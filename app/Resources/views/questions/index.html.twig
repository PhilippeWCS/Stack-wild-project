{% extends '::layout.html.twig' %}

{% block Wcsplatform_body %}

    <div class="row">
        <div class="col-md-3 col-sm-5 col-xs-12">
            <div class="display-table">
                <div class="display-table-row">
                    <div class="v-align box" id="navigation">
                        <div class="navi">
                            <ul>
                                <li class="active"><a href="#"><i class="fa fa-star" aria-hidden="true"></i><span>Préférences</span></a></li>
                                <li><a href="#"><i class="fa fa-gears" aria-hidden="true"></i><span>Top 20</span></a></li>
                                <li><a href="#"><i class="fa fa-calendar" aria-hidden="true"></i><span>Questions de la semaine</span></a></li>
                                <li><a href="{{ path('questions_new') }}"><i class="fa fa-quora" aria-hidden="true"></i><span>Posez une question</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-9 col-sm-7 col-xs-12">
            {% for question in questions %}
                <div class="quest_accueil">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-xs-2 text-center">
                                <h5>{{ question.votes|length }}</h5>
                                <h5><span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> Votes</h5>
                            </div>
                            <div class="col-xs-2 text-center">
                                <h5>{{ question.nbVue }}</h5>
                                <h5><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Vues</h5>
                            </div>
                            <div class="col-xs-2">
                                <img class="chevron" alt="chevron" src="{{ asset('img/chevron-droit.png') }}">
                            </div>
                            <div class="col-xs-4 text-center">
                                <h5>{{ question.reponses|length }}</h5>
                                <h5><span class="glyphicon glyphicon-comment" aria-hidden="true"></span><br>Réponses</h5>
                            </div>
                            <div class="col-xs-2">
                                <img class="chevron" alt="chevron" src="{{ asset('img/chevron-gauche.png') }}">
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-12">
                            <a href="{{ path('questions_show', { 'id': question.id }) }}">
                                <div class="text-center">
                                    <h5>{{ question.intituleQuestion }}</h5>
                                    <h5><i>Question posé par {{ question.user.prenom }} {{ question.user.nom }}</i></h5>

                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="text-center">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li  class="pagination">
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

{% endblock %}
